{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src/app",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "store/*": ["store/*"],
      "shared/*": ["shared/*"]
    },
    "lib": ["es2017", "dom"]
  }
}
